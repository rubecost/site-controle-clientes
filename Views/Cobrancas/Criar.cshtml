@model ControleClientesMvc.Models.CobrancaModel

<div class="header-container">
    <h2 class="fw-bold">Cadastrar nova cobrança</h2>
    <button onclick="window.history.back()" class="btn-cancelar">Voltar</button>
</div>
@if (ViewData["SucessoMessage"] != null)
{
    <div class="alert alert-success" role="alert">
        @ViewData["SucessoMessage"]
    </div>
}
@if (ViewData["ErroMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @ViewData["ErroMessage"]
    </div>
}
<div class="table-container">
    <form asp-action="Criar" method="post" class="row g-3">
        <div class="col-md-6">
            <label asp-for="Descricao" class="form-label">Descrição</label>
            <input asp-for="Descricao" class="form-control" placeholder="Descrição da cobrança" required />
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Valor" class="form-label">Valor</label>
            <input asp-for="Valor" class="form-control" placeholder="Valor da cobrança" required type="text" pattern="^(\d{1,3}(?:[\.,]\d{3})*(?:[\.,]\d{2})?)|(\d+[\.,]\d{2})?$" title="Por favor, insira um valor válido. Exemplos: 1.222,26; 1,222.26; 1200; 1.234; 1,99; 3; 10." />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Data" class="form-label">Data</label>
            <input asp-for="Data" type="date" class="form-control" placeholder="Data da cobrança" required />
            <span asp-validation-for="Data" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="_Status" class="form-label">Status da cobrança</label>
            <select asp-for="_Status" class="form-select" aria-label="Default select example" style="margin-left: -2px;">
                <option value="1">Pago</option>
                <option value="2" selected>Em aberto</option>
            </select>
        </div>
        <div class="btn-cadastrar-container col-12">
            <button type="submit" class="btn-cadastrar">Cadastrar</button>
        </div>
    </form>
</div>

<style>
    .header-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
    }

    .table-container {
        width: 100%;
        margin: 0;
        -webkit-overflow-scrolling: touch;
    }

    .btn-cancelar {
        background-color: red;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 14px;
        text-decoration: none;
    }

    .btn-cadastrar-container {
        display: flex;
        justify-content: flex-end;
        margin-top: 20px;
    }

    .btn-cadastrar {
        background-color: black;
        color: white;
        border: none;
        border-radius: 4px;
        padding: 10px 20px;
        cursor: pointer;
        font-size: 14px;
    }

    .form-label {
        font-weight: bold;
    }
</style>
